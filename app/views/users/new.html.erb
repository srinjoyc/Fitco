
<%= form_for User.new, class: "signupForm" do |f| %>

  <%= f.label :firstname %>
  <%= f.text_field :firstname, class: "shortInput" %> <br />

  <%= f.label :lastname %>
  <%= f.text_field :lastname, class: "shortInput" %> <br />

  <%= f.label :email, "Email Address" %>
  <%= f.text_field :email, class: "shortInput" %> <br />

  <%= f.label :password %>
  <%= f.password_field :password, class: "shortInput" %> <br />

  <%= f.label :password_confirmation, "Confirm Password" %>
  <%= f.password_field :password_confirmation, class: "shortInput" %> <br />

  <%= f.submit "Create account", class: "button createAccount" %>

<% end %>